<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdhk.ipc.mapper.TOrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zdhk.ipc.entity.TOrder">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="create_time" property="createTime" />
        <result column="user_name" property="userName" />
    </resultMap>


    <select id="listByRowNum" resultType="com.zdhk.ipc.entity.TOrder">
        SELECT
        A.*
        FROM
        (
        SELECT
        @rownum := @rownum + 1 AS rowNum,
        t.id,t.name,t.create_time,t.user_name
        FROM
        t_order_${suffix} t,
        ( SELECT @rownum := 0 ) r
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="userName != null and userName != ''">
                AND t.user_name = #{userName}
            </if>
        </trim>
        ORDER BY
        create_time DESC,id
        ) A
        WHERE
        A.rowNum > #{rowNum}
        LIMIT #{size}
    </select>


</mapper>
